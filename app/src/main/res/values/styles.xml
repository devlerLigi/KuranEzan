<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="colorControlHighlight">@color/fab_color_pressed</item>
    </style>

    <style name="AppTheme1" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/violet</item>
        <item name="actionMenuTextColor">@color/violet</item>

    </style>

    <style name="BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>

    </style>

    <style name="customTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/style_color_primary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="GradientProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">3</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_stroke_width">5dp</item>
        <item name="android:interpolator">@android:anim/accelerate_interpolator</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_gradients">true</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="notifDetailTextView" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
